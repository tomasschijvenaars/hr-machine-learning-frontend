{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@actions": ["./src/actions"],
      "@components": ["./src/components"],
      "@constants": ["./src/utils/constants"],
      "@fields": ["./src/components/field"],
      "@forms": ["./src/forms"],
      "@helpers": ["./src/utils/helpers"],
      "@hooks": ["./src/hooks"],
      "@layouts": ["./src/layouts"],
      "@modules": ["./src/modules"],
      "@themes": ["./src/themes"],
    }
  },
  "exclude": ["./node_modules", "./.next"],
  "include": ["./src/**/*"]
}
